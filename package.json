{
  "private": true,
  "name": "graphql-shield",
  "author": "Matic Zavadlal <matic.zavadlal@gmail.com>",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf packages/*/dist",
    "build": "node scripts/build.js --project tsconfig.build.json",
    "lint": "eslint --config .eslintrc.json --ext .ts .",
    "test": "jest",
    "test:ci": "jest --coverage",
    "prerelease": "pnpm run build",
    "release": "changeset publish",
    "release:canary": "(node scripts/canary.js && yarn build && yarn changeset publish --tag alpha) || echo Skipping Canary...",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,graphql,yml}\""
  },
  "devDependencies": {
    "@changesets/cli": "2.17.0",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "codecov": "3.8.3",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "11.2.6",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "resolutions": {
    "@changesets/git": "1.1.2",
    "esbuild": "^0.13.6",
    "prettier": "2.4.1",
    "graphql": "16.0.1"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml}": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "license": "MIT"
}
